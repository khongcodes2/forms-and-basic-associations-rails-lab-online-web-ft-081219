<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list:"song_artist_name" %>
  <datalist id='song_artist_name'>
    <% Artist.all.each do |a| %>
      <option value="<%= a.name %>">
    <% end %>
  </datalist>
  <br />

  <label for='song_genre_id'>Genre</label><br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>

  <label>Song Notes</label>
  <input id='song_notes_1' name='song[notes][]' >
  <input id='song_notes_2' name='song[notes][]' >
  <input id='song_notes_3' name='song[notes][]' >


  <%= f.submit %>
<% end %>


